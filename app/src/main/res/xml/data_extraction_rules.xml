<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include only specific files for cloud backup -->
        <include domain="shared_pref" path="quiz_prefs.xml" />

        <!-- Exclude any cache or temporary files -->
        <exclude domain="file" path="cache/" />
    </cloud-backup>

    <device-transfer>
        <!-- Include preferences for device transfer -->
        <include domain="shared_pref" path="quiz_prefs.xml" />

        <!-- Optionally exclude large files if needed -->
        <exclude domain="file" path="cache/" />
    </device-transfer>
</data-extraction-rules>
